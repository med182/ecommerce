{% extends 'base.html.twig' %}

{% block title %}Mon compte
{% endblock %}

{% block body %}

	<div class="container align-items-center  bg-white ">

		<div class="col-md-5 border-right">
			<div class="p-3 py-5">
				<div class="d-flex justify-content-between align-items-center mb-3">
					<h4 class="text-right">Profile de
						{{app.user.firstname}}
						{{app.user.lastname}}</h4>
				</div>
				<div class="row mt-2">
					<div class="col-md-6">
						<label class="labels">Nom</label><input type="text" class="form-control" value={{app.user.lastname}}></div>
					<div class="col-md-6">
						<label class="labels">Pr√©nom</label><input type="text" class="form-control" value={{app.user.firstname}}></div>
				</div>
				<div class="col-md-12">
					<label class="labels">Email
					</label><input type="text" class="form-control" value={{app.user.email}}></div>


				<div class="col-md-12">
					<label class="labels">Adresse</label><input type="text" class="form-control" value={{app.user.address}}></div>
				<div class="col-md-12">

					<label class="labels">Code postal</label><input type="text" class="form-control" value={{app.user.zipcode}}></div>
				<div class="col-md-12">
					<label class="labels">Ville</label><input type="text" class="form-control" value={{app.user.city}}></div>


			</div>
			<a href="{{path('profile_modifier')}}" class="btn  btn-primary">Modifier le profil</a>
			<a href="" class="btn btn-primary">Modifier le mot de passe</a>
		</div>
	</div>


{% endblock %}
