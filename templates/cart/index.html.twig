{% extends 'base.html.twig' %}

{% block title %}Votre panier
{% endblock %}

{% block body %}

	<section class="bg-light p-3">
		<h1>Votre Panier</h1>
	</section>
	<table class="table">
		<thead>
			<tr>
				<th>Produit</th>
				<th>Prix</th>
				<th>Quantité</th>
				<th>Total</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{%  for element in dataPanier %}
				<tr>
					<td>{{ element.product.name }}</td>
					<td class="text-end">{{ element.product.price / 100}}
						€</td>
					<td>{{ element.quantite}}</td>
					<td class="text-end">{{ element.quantite * element.product.price / 100}}
						€</td>
					<td>
						<a href="{{path("cart_add",{id: element.product.id})}}" class="btn btn-success">
							<i class="fa-solid fa-plus"></i>
						</a>
						<a href="{{path("cart_remove" , {id: element.product.id})}}" class="btn btn-warning">
							<i class="fa-sharp fa-solid fa-minus"></i>
						</a>
						<a href="{{path("cart_delete" , {id: element.product.id})}}" class="btn btn-danger">
							<i class="fa-solid fa-xmark"></i>
						</a>


					</td>
				</tr>

			{% else %}
				<tr>
					<td colspan="5" class="text-center">
						Votre panier est vide
					</td>
				</tr>
			{% endfor %}
		</tbody>
		<tfoot>
			<tr>
				<td colspan="3">Total</td>
				<td class="text-end">{{total / 100}}
					€</td>
				<td>
					<a href="{{path("cart_delete_all")}}" class="btn btn-danger">
						<i class="fa-solid fa-xmark"></i>
					</a>

				</td>
			</tr>
		</tfoot>
	</table>

{% endblock %}
